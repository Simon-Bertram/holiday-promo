{
  "name": "holiday-promo",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "next": "^16.1.0",
      "zod": "^4.1.12",
      "@orpc/server": "^1.10.0",
      "@orpc/client": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "better-auth": "^1.3.28",
      "drizzle-orm": "^0.44.7",
      "dotenv": "^17.2.2",
      "tsdown": "^0.15.5"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @holiday-promo/db db:push",
    "db:studio": "turbo -F @holiday-promo/db db:studio",
    "db:generate": "turbo -F @holiday-promo/db db:generate",
    "db:migrate": "turbo -F @holiday-promo/db db:migrate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.1",
    "jsdom": "^27.2.0",
    "msw": "^2.12.4",
    "tsdown": "^0.15.12",
    "turbo": "^2.6.3",
    "ultracite": "6.0.5",
    "vitest": "^4.0.15"
  },
  "packageManager": "bun@1.3.1"
