{
  "name": "@holiday-promo/api",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "default": "./src/services/*.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsdown"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.44.7",
    "next": "catalog:",
    "typescript": "^5"
  },
  "dependencies": {
    "@orpc/server": "catalog:",
    "@orpc/client": "catalog:",
    "@orpc/openapi": "catalog:",
    "@orpc/zod": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@holiday-promo/auth": "workspace:*",
    "@holiday-promo/db": "workspace:*"
  },
  "devDependencies": {
    "next": "catalog:",
    "tsdown": "catalog:"
  }
}
